%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    / mobile settings
    %meta{:content => "width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0", :name => "viewport"}/
    %title= t("layout.title")
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    %link{:href => "http://fonts.googleapis.com/css?family=Cormorant:400,400i,700,700i",
          :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Open Sans:400,400i,700,700i",
          :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800,900",
          :rel => "stylesheet", :type => "text/css"}

  %body{class: body_class}
    = render "layouts/menu" unless params[:id] == "index"
    = yield
    .section5.section.footer
      .footer-box.footer-left
        .left-8
          %h2 Ecoframe House
          =image_tag "logo-musta-100.png", :width => "85"
          %p
            =t("layout.phone")
            040 730 8052
            %br
            %a{:href => "mailto: info@ecoframe.house"}
              info@ecoframe.house
            %br
            Fiskarsintie 847
            %br
            10480 Antskog
        .footer-links.left-4.text-center
          %br

          %h3
            = link_to page_path(:index) do
              =image_tag "oksa.png"
              %br
              = t("menu.home")
            %br
            %br
            = link_to page_path(:homes) do
              =image_tag "oksa.png"
              %br
              = t("menu.homes")
            %br
            %br
            = link_to page_path(:frames) do
              =image_tag "oksa.png"
              %br
              = t("menu.frames")
            %br
            %br
            = link_to page_path(:wood) do
              =image_tag "oksa.png"
              %br
              = t("menu.work")
            %br


      .footer-box.form.footer-right
        .form-container
          %h2
            = t("form.contact")

          = render 'messages/form', message: Message.new

