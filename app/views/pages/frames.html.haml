:javascript
  var currentSlide = 0;
  var slideInterval = setInterval(nextSlide,3000);
  var slideNames = #{frame_paths.to_json().html_safe} ;

  function nextSlide() {
    var slides = document.querySelectorAll('#aloitus');
    slides[0].src = slideNames[currentSlide];
    currentSlide = (currentSlide + 1) % slideNames.length;
  }

