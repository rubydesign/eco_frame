.title.header
  .left-7.header-logo
    =image_tag "logo-valk-100.png"
    %h1 Eco Frame House
  .left-4
    %h3{:style => "margin-top: 43px;"}
      Beautifully crafted homes

  .left-1
    .dropdown
      %button.dropbtn
        \ 
      .dropdown-content
        %a{:href => "../"} Etusivu
        %a{:href => "/homes"} Kodit
        %a{:href => "/frames"} Timberframe
        %a{:href => "/wood"} Käsityö
        %a{:href => "/house"} Suunnittelu

.graph_app
  .graph-header.left-7
    %h1 Rungon suunnittelu-työkalu
  .graph-header.left-2
    .post-info.tooltip
      Mikä tämä on?
      %span.kysymys
        =image_tag "img/kysymys.png"
      %span.tooltiptext
        %b
          Tämän sivun työkalulla voit itse suunnitella Timberframe -runkoa.
        %br
        Liukusäätimillä muutat rungon mittoja, kattotuolien määrää, katon kaltevuutta ja muita ominaisuuksia.
        %br
        Viemällä kursorin mallikuvan päälle voit zoomata sisään ja ulos. Tartu hiirellä niin voit kääntää taloa ja horisonttia.
        %br
        %b
          %i Kannattaa kokeilla!


  .post_control.right-3
    %range-slider{"v-model":"frame.angle" , ":min":"5", ":max":"46" }
      %b Truss Angle {{frame.angle}}&deg;
      %br
      (Height: {{Math.floor(truss_height)}}cm)
    %range-slider{"v-model":"frame.height" , ":min":"50", ":max":"180" }
      %b Post Height {{frame.height*2}}
    %range-slider{"v-model":"frame.width" ,":min":"50", ":max":"330"}
      %b Width {{frame.width*2}}
    %range-slider{"v-model":"frame.spacing" , ":min":"50", ":max":"330"}
      %b Length {{length*2}}
      %br
      (Spacing: {{frame.spacing*2}})
    %range-slider{"v-bind:value":"posts" , "v-on:input":"set_posts($event)",
                  ":min":"2", ":max":"11"}
      %b Posts {{posts}}
    %range-slider{"v-model":"frame.size" ,":min":"5", ":max":"12.5" , ":step":"1.25"}
      %b Size {{frame.size*2}}cm ({{(frame.size*2/2.5).toFixed(0)}}in)
    %range-slider{"v-bind:value":"scale", "v-on:input":"set_scale($event)",":min":30, ":max":150}
      %span
        Scale
        %b {{scale}}
    .rangeslider
      %b Braces
      %input{type:"checkbox", "v-model":"frame.braced"}
      %br
    .rangeslider
      %select{"v-model":"truss"}
        %option{ value:"king"} King
        %option{ value:"collar"} Collar
        %option{ value:"hammer"} Hammer
        %option{ value:"stopped"} Stopped
        %option{ value:"pulp"} Pulpetti
        %option{ value:"none"} No Truss
      %br
    .rangeslider
      Joints
      %b {{joins(1)}}
      %br
    .rangeslider
      Pieces
      %b {{pieces(1)}}
      %br
    .rangeslider
      Cubes
      %b {{cubes(1).toFixed(2)}}
      %br
    %br
    .rangeslider
      Estimate
      %b {{estimate(1)}}
      %br
  .canvas_wrapper
    %canvas#xeocanvas

= javascript_include_tag 'application'
:javascript
  var eco_frame = new Frame();
