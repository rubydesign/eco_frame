class Floor < xeogl.Model
  def initialize(frame)
    super({})
    @frame = frame
    @floor = frame.plane_for(self)
    @floor.rotateX(-90)
    self.update()
  end

  def update()
    @floor.scale(@frame.width/2 + 200 , @frame.length/2 + 200  , 1000)
    @floor.position(0, -@frame.height - @frame.size , 0)
  end
end
