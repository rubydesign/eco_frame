class Floor
  def initialize(frame)
    @frame = frame
    @floor = frame.app.createPlane()
    @floor.material.set("color" , "palegreen")
    @floor.rotation.rotateX(-Math.PI / 2)
    self.update()
  end

  def update()
    @floor.scale.set(@frame.width , (@frame.length + @frame.width) / 2  , 10)
    @floor.position.set(0, -@frame.height - @frame.size , 0);
  end
end
