class Plate < EcoModel

  def initialize(data)
    super(data,"plates")
    self.update()
  end

  def update()
    self.update_pairs(1, "plate")
  end

  def update_plate(plate , index , side)
    plate.position(side * self.width / 2 , -self.size/2 ,
      self.offset(@data.posts/2 - 0.5) )
    plate.scale( self.size / 2, self.size / 2,  self.spacing*(@data.posts-1)/2 )
  end

end
