class Plate

  def initialize(app)
    @app = app
    @spacing = 300
    @width = 300
    @size =  15
    @posts =  5
    puts "called init #{@width}"
    self.add_plate(@width / 2)
    self.add_plate(- @width / 2)
  end
  def add_plate(at)
    @plate = @app.createCube();
    @plate.position.set(at , -@size/2 , @spacing*(@posts-1)/8)
    @plate.scale.set( @size / 2, @size / 2, @spacing*(@posts-1)/2 )
    @plate.material.set("color" , "salmon")
  end

end
